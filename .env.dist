# Copy to .env and update values as needed.

# Required for research_summarizer
STRANDEX_LLAMA_MODEL_PATH=/absolute/path/to/model.gguf

# Optional tuning (CPU-optimized defaults)
STRANDEX_LLAMA_CTX=4096
# Defaults to (CPU cores - 2) if not set.
# STRANDEX_LLAMA_THREADS=8
STRANDEX_LLAMA_GPU_LAYERS=0
# Silence llama-cpp-python logs by default.
STRANDEX_LLAMA_VERBOSE=0

# CLI logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
STRANDEX_LOG_LEVEL=INFO

# Render agent output as Markdown in the CLI.
STRANDEX_RENDER_MARKDOWN=1

# Stream tokens with a Rich Live panel (set to 0 to disable).
STRANDEX_STREAM=0
